{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Bottly discord bot",
  "main": "./build/src/client.js",
  "scripts": {
    "dev": "npx nodemon --exec node -r @swc-node/register -r tsconfig-paths/register ./src/client.ts dev",
    "start": "node -r @swc-node/register -r tsconfig-paths/register ./src/client.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:gen": "prisma generate",
    "db:studio": "prisma studio",
    "db:format": "prisma format"
  },
  "dependencies": {
    "@bottlycorp/prompts": "^1.1.5",
    "@discordjs/builders": "^1.6.1",
    "bettercolors": "^1.0.0",
    "cron": "^2.3.0",
    "dayjs": "^1.11.7",
    "discord.js": "^14.9.0",
    "gpt3-tokenizer": "^1.1.5",
    "openai": "^3.2.1",
    "topgg-autoposter": "^2.0.1"
  },
  "devDependencies": {
    "@bluzzi/eslint-config": "^0.9.0",
    "@prisma/client": "^4.13.0",
    "@swc-node/register": "^1.6.4",
    "@swc/core": "^1.3.49",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "nodemon": "^2.0.22",
    "prisma": "^4.13.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "extends": "@bluzzi",
    "rules": {
      "camelcase": "off"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}